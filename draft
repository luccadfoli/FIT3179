var specVis2 = {
      "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "title": {"text": "Average Sunlight Hours in Australia", "fontSize": 20, "fontWeight": "bold", "dy": 8},
      "width": "container",
