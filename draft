                    "data": {
                      "url": "https://raw.githubusercontent.com/luccadfoli/FIT3179/main/sunann_gridvals.csv",
                      "format": {"type": "csv", "parse": {"grid_id":"number","value":"number"}}
                    },
                    "key": "grid_id", "fields": ["value"]
                  }
                },
                {"calculate": "round(datum.value)", "as": "val_int"},
